<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/new_ver_carView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/new_ver_img"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:src="@drawable/ice_cream"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="14dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/new_ver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/amarante"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/new_ver_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amarante"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >
                    <ImageView
                        android:id="@+id/new_ver_star"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star"
                        app:tint="@color/purple_500"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        />
                    <TextView
                        android:id="@+id/new_ver_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/new_ver_clock"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/clock"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="2dp"
                        app:tint="@color/purple_500" />
                    <DigitalClock
                        android:id="@+id/new_ver_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 - 7:00"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>